<Page x:Class="TeamProjectManagementSystem.View.TeamListView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TeamProjectManagementSystem.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TeamListView">

    <DockPanel>
        <DockPanel DockPanel.Dock="Top">
            <Menu FontSize="14" FontFamily="Segoe UI Symbol" Background="#FFF9F7F6">
                <MenuItem Header="팀" />
                <MenuItem Header="할 일" />
                <MenuItem Header="채팅" />
                <MenuItem Header="공모전" />
                <MenuItem Header="로그아웃" />
            </Menu>
        </DockPanel>
        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Border
                Grid.Column="0" Grid.Row="0"
                Margin="10,15,100,15" 
                CornerRadius="5"
                Background="#FFF9F7F6" 
                BorderBrush="LightGray" 
                BorderThickness="1">
                <TextBlock 
                    Text="팀 추가" 
                    TextAlignment="Center"/>
            </Border>

            <Border
                Grid.Column="0" Grid.Row="1"
                Margin="10"
                CornerRadius="10"
                Background="#FFF9F7F6" 
                BorderBrush="LightGray" 
                BorderThickness="1">
                <TextBlock 
                    Text="프리미엄 물티슈" 
                    TextAlignment="Center" 
                    VerticalAlignment="Center"/>
            </Border>
        </Grid>
    </DockPanel>
</Page>
